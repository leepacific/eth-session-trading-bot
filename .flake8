[flake8]
max-line-length = 127
max-complexity = 10
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by isort)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811